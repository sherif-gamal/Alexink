<%= render "layouts/ajaxify" %>
<div class="row">
  <div id="breadcrumb" class="col-md-12">
    <ol class="breadcrumb">
      <li><a href="#">الصفحة الرئيسية</a></li>
      <li><a href="#">اليوميات</a></li>
      <li><a href="#">يوميات الخزنة</a></li>
    </ol>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <div class="box-name">
          <i class="fa fa-linux"></i>
          <span>يوميات المدخلات</span>
        </div>

        <div class="no-move"></div>
      </div>
      <div class="box-content no-padding table-responsive">
        <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="datatable-2">
          <thead>
            <tr>
              <th>التاريخ</th>
              <th>عن طريق</th>
              <th>الوصف</th>
              <th>المبلغ</th>
            </tr>
          </thead>
          <tbody>
             <% sum = 0%>
            <% @treasury_additions.each do |a| %>
              <%sum = sum + a.amount%>
              <%if a.transaction_type == ApplicationController::PURCHASE%>
                <%m = Purchase.find(a.transaction_id)%>
                <%t = Client.find(m.client_id)%>
                <tr data-href="<%= purchase_path(m) %>">
              <%elsif a.transaction_type == ApplicationController::CLIENT%>
                <%t = Client.find(a.transaction_id)%>
                <tr data-href="<%= client_path(t) %>">
              <%elsif a.transaction_type == ApplicationController::MANUAL%>
                <%t = User.find(a.transaction_id)%>
                <tr>
              <%end%>
                  <td><%= a.created_at.strftime("%Y/%m/%d") %></td>
                  <td><%= t.name%></td>
                  <td><%= a.description %></td>
                  <td><%= a.amount %></td>
                </tr>
            <% end %>
            </tr>
          </tbody>
          <tfoot>
            <tr>
              <th><label></label></th>
              <th><label></label></th>
              <th><label></label></th>
              <th><label>الإجمالي = <%=sum%></label></th>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <div class="box-name">
          <i class="fa fa-linux"></i>
          <span>يوميات المخرجات</span>
        </div>

        <div class="no-move"></div>
      </div>
      <div class="box-content no-padding table-responsive">
        <table class="table table-bordered table-striped table-hover table-heading table-datatable" id="datatable-2">
          <thead>
            <tr>
              <th>التاريخ</th>
              <th>عن طريق</th>
              <th>الوصف</th>
              <th>المبلغ</th>
            </tr>
          </thead>
          <tbody>
             <% sum = 0%>
            <% @treasury_subtractions.each do |a| %>
              <%sum = sum - a.amount%>
              <%if a.transaction_type == ApplicationController::MATERIAL%>
                <%m = Material.find(a.transaction_id)%>
                <%t = RawMaterial.find(m.raw_material_id)%>
                <tr data-href="<%= material_path(m) %>">
              <%elsif a.transaction_type == ApplicationController::SUPPLIER%>
                <%t = Supplier.find(a.transaction_id)%>
                <tr data-href="<%= supplier_path(t) %>">
              <%elsif a.transaction_type == ApplicationController::EXPENSE%>
                <%t = Expense.find(a.transaction_id)%>
                <tr data-href="<%= expense_path(t) %>">
              <%elsif a.transaction_type == ApplicationController::MANUAL%>
                <%t = User.find(a.transaction_id)%>
                <tr>
              <%end%>
                  <td><%= a.created_at.strftime("%Y/%m/%d") %></td>
                  <td><%= t.name%></td>
                  <td><%= a.description %></td>
                  <td><%= - a.amount %></td>
                </tr>
            <% end %>
            </tr>
          </tbody>
          <tfoot>
            <tr>
              <th><label></label></th>
              <th><label></label></th>
              <th><label></label></th>
              <th><label>الإجمالي = <%=sum%></label></th>
            </tr>
          </tfoot>
        </table>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
// Run Datables plugin and create 3 variants of settings
function AllTables(){
  setupTables();
  LoadSelect2Script(MakeSelect2);
}
function MakeSelect2(){
  $('select').select2();
  $('.dataTables_filter').each(function(){
    $(this).find('label input[type=text]').attr('placeholder', 'Search');
  });
}
$(document).ready(function() {
  // Load Datatables and run plugin on tables 
  LoadDataTablesScripts(AllTables);
  // Add Drag-n-Drop feature
  WinMove();
    $("tr[data-href]").click(function() {
  window.location = this.dataset.href;
}).hover(function() {
    $(this).toggleClass('hover');
});
});
</script>
