<%= render "layouts/ajaxify" %>
<div class="row">
  <div id="breadcrumb" class="col-md-12">
    <ol class="breadcrumb">
      <li><a href="/">الصفحة الرئيسية</a></li>
      <li><a href="#">الموظفين</a></li>
      <li><a href="#">تسجيل موظف</a></li>
    </ol>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-12">
    <div class="box">
      <div class="box-header">
        <div class="box-name">
          <i class="fa fa-search"></i>
          <span>بيانات الموظف</span>
        </div>
        <div class="box-icons">
          <a class="collapse-link">
            <i class="fa fa-chevron-up"></i>
          </a>
          <a class="expand-link">
            <i class="fa fa-expand"></i>
          </a>
          <a class="close-link">
            <i class="fa fa-times"></i>
          </a>
        </div>
        <div class="no-move"></div>
      </div>
      <div class="box-content">

        <% if notice.present? %>
        <h3 class="alert alert-danger"><%= notice%></h3>
        <%end%>
          <%= form_for(@user, html: {class: 'form-horizontal'}) do |f| %>
            <% if @user.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

                <ul>
                <% @user.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.label :name,  'اسم الموظف', {class:"col-sm-2 control-label pull-right"}%>
              <div class="col-sm-4 pull-right">
                <%= f.text_field :name , {class:"form-control", placeholder:"اسم الموظف", 'data-toggle' => "tooltip", 'data-placement' => "bottom", title:"اسم الموظف"}%>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :email,  'البريد الإليكتروني', {class:"col-sm-2 control-label pull-right"}%>
              <div class="col-sm-4 pull-right">
                <%= f.text_field :email , {class:"form-control", placeholder:"email@example.com", 'data-toggle' => "tooltip", 'data-placement' => "bottom", title:"البريد الإليكتروني"}%>
              </div>
            </div>
            <% if @user == current_user%>
            <div class="form-group">
              <%= f.label :password,  'كلمة المرور', {class:"col-sm-2 control-label pull-right"}%>
              <div class="col-sm-4 has-warning has-feedback pull-right">
                <%= f.password_field :password , {class:"form-control", placeholder:"Password", 'data-toggle' => "tooltip", 'data-placement' => "bottom", title:"كلمة المرور"}%>
                <span class="fa fa-key txt-warning form-control-feedback"></span>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation,  'تأكيد كلمة المرور', {class:"col-sm-2 control-label pull-right"}%>
              <div class="col-sm-4 has-warning has-feedback pull-right">
                <%= f.password_field :password_confirmation , {class:"form-control", placeholder:"Password", 'data-toggle' => "tooltip", 'data-placement' => "bottom", title:"كلمة المرور"}%>
                <span class="fa fa-key txt-warning form-control-feedback"></span>
              </div>
            </div>

            <%end%>


            <div class="form-group">
              <%= f.label :occupation,  'الوظيفة', {class:"col-sm-2 control-label pull-right"}%>
              <div class="col-sm-4 pull-right">
                <%= f.text_field :occupation , {class:"form-control", placeholder:"الوظيفة", 'data-toggle' => "tooltip", 'data-placement' => "bottom", title:"الوظيفة"}%>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :department,  'القسم', {class:"col-sm-2 control-label pull-right"}%>
              <div class="col-sm-4 pull-right">
                <%= f.select :department , [["الإدارة", "Management"], ["المشتريات", "Purchases"], ["المبيعات", "Sales"], ["المخازن", "Stocks"]], {}, {class:"pull-right", style:"min-width:100%"}%>
              </div>
            </div>
            
            <div class="form-group">
              <%= f.label :address,  'العنوان', {class:"col-sm-2 control-label pull-right"}%>
              <div class="col-sm-4 pull-right">
                <%= f.text_field :address , {class:"form-control", placeholder:"العنوان", 'data-toggle' => "tooltip", 'data-placement' => "bottom", title:"العنوان"}%>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-2 pull-right">
              <%= f.submit 'تعديل بيانات الموظف', class:"btn btn-primary btn-label-left" %>
            </div>
            <div class="col-sm-offset-1 col-sm-2 pull-right">
              <button type="cancel" class="btn btn-default btn-label-left">
              <span><i class="fa fa-clock-o txt-danger"></i></span>
                إلغاء
              </button>
            </div>
          </div>
            </div>
          <% end %>

        
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
// Run Select2 plugin on elements
function DemoSelect2(){
  $('#s2_with_tag').select2({placeholder: "Select OS"});
  $('#s2_country').select2();
}
// Run timepicker
function DemoTimePicker(){
  $('#input_time').timepicker({setDate: new Date()});
}
$(document).ready(function() {
  // Create Wysiwig editor for textare
  TinyMCEStart('#wysiwig_simple', null);
  TinyMCEStart('#wysiwig_full', 'extreme');
  // Add slider for change test input length
  FormLayoutExampleInputLength($( ".slider-style" ));
  // Initialize datepicker
  $('#input_date').datepicker({setDate: new Date()});
  // Load Timepicker plugin
  LoadTimePickerScript(DemoTimePicker);
  // Add tooltip to form-controls
  $('.form-control').tooltip();
  LoadSelect2Script(DemoSelect2);
  // Load example of form validation
  LoadBootstrapValidatorScript(DemoFormValidator);
  // Add drag-n-drop feature to boxes
  WinMove();
});
</script>