<%= render "layouts/ajaxify" %>

<div class="row">
  <div id="breadcrumb" class="col-md-12">
    <ol class="breadcrumb">
      <li><a href="/">الصفحة الرئيسية</a></li>
      <li><a href="#">العملاء</a></li>
      <li><a href="#">تسجيل عميل جديد</a></li>
    </ol>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-12">
    <div class="box">
      <div class="box-header">
        <div class="box-name">
          <i class="fa fa-search"></i>
          <span>بيانات العميل</span>
        </div>

        <div class="no-move"></div>
      </div>
      <div class="box-content">
        <% if notice.present? %>
        <h3 class="alert alert-danger"><%= notice%></h3>
        <%end%>
          <%= form_for(@client, html: {class: 'form-horizontal'}) do |f| %>
            <% if @client.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@client.errors.count, "error") %> prohibited this client from being saved:</h2>

                <ul>
                <% @client.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.label :name,  'اسم العميل', {class:"col-sm-2 control-label pull-right"}%>
              <div class="col-sm-4 pull-right">
                <%= f.text_field :name , {class:"form-control", placeholder:"اسم العميل", 'data-toggle' => "tooltip", 'data-placement' => "bottom", title:"اسم العميل"}%>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :country,  'الدولة', {class:"col-sm-2 control-label pull-right"}%>
              <div class="col-sm-4 pull-right">
                <%= f.text_field :country , {class:"form-control", placeholder:"الدولة", 'data-toggle' => "tooltip", 'data-placement' => "bottom", title:"الدولة"}%>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :address,  'العنوان', {class:"col-sm-2 control-label pull-right"}%>
              <div class="col-sm-4 pull-right">
                <%= f.text_field :address , {class:"form-control", placeholder:"العنوان", 'data-toggle' => "tooltip", 'data-placement' => "bottom", title:"العنوان"}%>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :zip,  'الرقم البريدي', {class:"col-sm-2 control-label pull-right"}%>
              <div class="col-sm-4 pull-right">
                <%= f.text_field :zip , {class:"form-control", placeholder:"الرقم البريدي", 'data-toggle' => "tooltip", 'data-placement' => "bottom", title:"الرقم البريدي"}%>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :phone,  'الهاتف', {class:"col-sm-2 control-label pull-right"}%>
              <div class="col-sm-4 pull-right">
                <%= f.text_field :phone , {class:"form-control", placeholder:"الهاتف", 'data-toggle' => "tooltip", 'data-placement' => "bottom", title:"الهاتف"}%>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :email,  'البريد الإليكتروني', {class:"col-sm-2 control-label pull-right"}%>
              <div class="col-sm-4 pull-right">
                <%= f.text_field :email , {class:"form-control", placeholder:"email@example.com", 'data-toggle' => "tooltip", 'data-placement' => "bottom", title:"البريد الإليكتروني"}%>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :bank,  'بيانات البنك', {class:"col-sm-2 control-label pull-right"}%>
              <div class="col-sm-4 pull-right">
                <%= f.text_area :bank , {class:"form-control", placeholder:"بيانات البنك", 'data-toggle' => "tooltip", 'data-placement' => "bottom", title:"بيانات البنك"}%>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :contact_person,  'جهة الاتصال', {class:"col-sm-2 control-label pull-right"}%>
              <div class="col-sm-4 pull-right">
                <%= f.text_field :contact_person , {class:"form-control", placeholder:"الموظف المسئول", 'data-toggle' => "tooltip", 'data-placement' => "bottom", title:"جهة الاتصال"}%>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :debt,  'الموقف', {class:"col-sm-2 control-label pull-right"}%>
              <div class="col-sm-4 pull-right">
                <%= f.text_field :debt , {class:"form-control"}%>
              </div>
              <%=check_box_tag "affects_treasury"%> تعديل الموقف يؤثر في الخزنة
            </div>


            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-2 pull-right">
              <%= f.submit "حفظ التعديلات", class:"btn btn-primary btn-label-left" %>
            </div>
            <div class="col-sm-offset-1 col-sm-2 pull-right">
              <button type="cancel" class="btn btn-default btn-label-left">
              <span><i class="fa fa-clock-o txt-danger"></i></span>
                إلغاء
              </button>
            </div>
          </div>
            </div>
          <% end %>

        
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
// Run Select2 plugin on elements
function DemoSelect2(){
  $('#s2_with_tag').select2({placeholder: "Select OS"});
  $('#s2_country').select2();
}
// Run timepicker
function DemoTimePicker(){
  $('#input_time').timepicker({setDate: new Date()});
}
function validator() {
    $('form').bootstrapValidator({
    message: 'برجاء مراجعة المدخل',
    fields: {
      'client[name]': {
        message: 'الاسم غير مقبول',
        validators: {
          notEmpty: {
            message: 'لا يمكن أن يكون الاسم فارغاً'
          },
          stringLength: {
            min: 3,
            max: 30,
            message: 'اسم العميل لابد أن يكون محصوراً بين 3 إلى 30 حرف  '
          }
        }
      },
      'client[country]': {
        validators: {
          notEmpty: {
            message: 'لابد من إدخال الدولة'
          }
        }
      },
      'client[address]': {
        validators: {
          notEmpty: {
            message: 'لابد من إدخال العنوان'
          }
        }
      },
      'client[email]': {
        validators: {
          emailAddress: {
            message: 'البريد الإليكتروني غير صحيح'
          }
        }
      },
      'client[phone]': {
        validators: {
          digits: {
            message: 'الهاتف يتكون من أرقام فقط'
          }
        }
      },
      'client[zip]': {
        validators: {
          digits: {
            message: 'أرقام فقط'
          }
        }
      },
      'client[debt]': {
        validators: {
          notEmpty: {
            message: 'لا يمكن أن يكون الموقف فارغاً'
          },
          numeric: {
            message: 'أرقام فقط'
          }
        }
      }
    }
  });
}
$(document).ready(function() {
  // Create Wysiwig editor for textare
  TinyMCEStart('#wysiwig_simple', null);
  TinyMCEStart('#wysiwig_full', 'extreme');
  // Add slider for change test input length
  FormLayoutExampleInputLength($( ".slider-style" ));
  // Initialize datepicker
  $('#input_date').datepicker({setDate: new Date()});
  // Load Timepicker plugin
  LoadTimePickerScript(DemoTimePicker);
  // Add tooltip to form-controls
  $('.form-control').tooltip();
  LoadSelect2Script(DemoSelect2);
  // Load example of form validation
  LoadBootstrapValidatorScript(validator);
  // Add drag-n-drop feature to boxes
  WinMove();
});
</script>
