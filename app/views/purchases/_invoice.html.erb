<div class="row"  dir="ltr">
	<div class="col-xs-8 col-xs-offset-2" id="invoice">
		<div class="box">
			<div class="box-content">
				<div class="col-xs-6">
					<address>
						<strong>Alexink Egypt</strong><br>
						6 Aziz Fahmy St. Sporting, Alexandria, <br>
						Alexandria<br>
						Egypt <br>
						<abbr title="Phone">P:</abbr> (+2) 03-5469692
					</address>
					<address>
						<strong>Email</strong><br>
						<a href="mailto:#">info@alexinkegypt.net</a>
					</address>
				</div>
				<div class="col-xs-6 text-center">
					<address>
						<%= @client.name%>
						<%= @client.address%> <br>
						<%= @client.zip%><br>
						<%= @client.country%><br>
						<abbr title="Phone">P:</abbr> <%= @client.phone%>
					</address>
					<h3 class="invoice-header">فاتورة رقم<%= @purchase.invoice_id%></h3>
					<p>التاريخ - <%= Time.now.strftime("%m/%d/%Y")%></p>
				</div>
				<div class="clearfix"></div>
				<div class="col-xs-12">
					<strong class="well col-xs-12 text-center">المنتج - <%= @product.name%></strong>
					<strong class="well col-xs-6 text-center">الكمية - <%= @purchase.quantity%></strong><br/>
					<strong class="well col-xs-6 text-center">السعر - <%= @purchase.price%></strong>
					<strong class="well col-xs-6 text-center">المبلغ المتبقي - <%= @purchase.debt%></strong>
					<%translations = {"cash" => "نقدي", "bank" => "بنك"}%>
					<strong class="well col-xs-6 text-center">طريقة الدفع - <%= translations[@purchase.payment_method]%></strong>
				</div>
				<div class="clearfix"></div>
			</div>
		</div>
	</div>
</div>
<div class="col-xs-6 col-xs-offset-6">
					<div class="col-xs-4">
						<a href"" class="btn btn-default btn-label-left" id="print"><span><i class="fa fa-floppy-o"></i></span> طباعة وحفظ</a>
					</div>
				</div>

<%= javascript_include_tag 'js/jspdf.min' %>
<%= javascript_include_tag 'js/html2canvas' %>
<script>
	//require 'jspdf'
	var doc = new jsPDF();
	var specialElementHandlers = {
	    '#editor': function (element, renderer) {
	        return true;
	    }
	};
	$('#print').click(function () {
		html2canvas(document.querySelector("#invoice"), { onrendered: function(canvas) {
			console.log(canvas.toDataURL());
			doc.addImage(canvas.toDataURL(), 'JPEG', 10, 10, 200, 200);
    		doc.save('sample-file.pdf');
		}});
		window.location = "/purchases"
	    
	});

</script>