<div class="row">
  <div id="breadcrumb" class="col-md-12">
    <ol class="breadcrumb">
      <li><a href="/">الصفحة الؤئيسية</a></li>
      <li><a href="#">المبيعات</a></li>
      <li><a href="#">تسجيل.عملية.بيع</a></li>
    </ol>
  </div>
</div>
<div class="row">
  <div class="col-xs-12 col-sm-12">
    <div class="box">
      <div class="box-header">
        <div class="box-name">
          <i class="fa fa-search"></i>
          <span>إتمام عملية بيع</span>
        </div>

        <div class="no-move"></div>
      </div>
      <div class="box-content">
        <% if notice.present? %>
        <h3 class="alert alert-danger"><%= notice%></h3>
        <%end%>
          <%= form_for(@purchase, html: {class: 'form-horizontal',  onsubmit:"return validate()" }) do |f| %>
            <% if @purchase.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@purchase.errors.count, "error") %> prohibited this purchase from being saved:</h2>

                <ul>
                <% @purchase.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>

            <div class="form-group">
              <%= f.label :client_id,  'العميل', {class:"col-sm-2 control-label pull-right"}%>
              <div class="col-sm-4 pull-right">
                <%= f.select :client_id, @clients.collect {|c| [c.name, c.id]}, {}, {class:"pull-right", style:"min-width:100%"} %>
              </div>
            </div>
            <div id="products">
              <div id="product" style="border: 1px solid #000; border-radius:10px;">
                <span  style="cursor: pointer;" class="pull-left glyphicon glyphicon-minus"  id="delete-product" onclick="f()"></span>
                <div class="form-group">
                  <%= f.label :product_ids,  'المنتج', {class:"col-sm-2 control-label pull-right"}%>
                  <div class="col-sm-4 pull-right">
                    <%= select_tag "product_ids[]", options_for_select(@products.collect {|p| [p.name, p.id, {'in_stock' => p.in_stock}]}),  {class:"pull-right", style:"min-width:100%"}%>
                  </div>
                </div>

                <div class="form-group">
                  <%= f.label :quantities,  'الكمية', {class:"col-sm-2 control-label pull-right"}%>
                  <div class="col-sm-4 pull-right">
                    <%= f.text_field :quantities , {class:"form-control", placeholder:"الكمية", 'data-toggle' => "tooltip", 'data-placement' => "bottom", title:"الكميلة", multiple:true}%>
                    
                  </div>
                </div>

                <div class="form-group">
                  <%= f.label :prices,  'سعر الوحدة', {class:"col-sm-2 control-label pull-right"}%>
                  <div class="col-sm-4 pull-right">
                    <%= f.text_field :prices , {class:"form-control", placeholder:"سعر الوحدة", 'data-toggle' => "tooltip", 'data-placement' => "bottom", title:"سعر الوحدة", multiple:true}%>
                  </div>
                </div>
              </div>
            </div>
            <div><span  style="cursor: pointer;" class="glyphicon glyphicon-plus"  id="add-product"></span></div>
            <div class="form-group">
              <%= f.label :payment_method,  'طريقة الدفع', {class:"col-sm-2 control-label pull-right"}%>
              <div class="col-sm-4 pull-right">
                <%= f.select :payment_method, ['cash', 'bank'], {}, {class:"pull-right", style:"min-width:100%"} %>
              </div>
            </div>

            <div class="form-group">
              <%= f.label :payment_state,  'حالة الدفع', {class:"col-sm-2 control-label pull-right"}%>
              <div class="col-sm-2 pull-right">
                <%= f.select :payment_state, ['تم الدفع', 'آجل'],{}, {class:"pull-right", style:"min-width:100%", onchange:"set_debt()" } %>
              </div>
              <div id="debt-div" hidden="hidden">
                <%= f.label :debt,  'المبلغ المتبقي', {class:"col-sm-2 control-label pull-right"}%>
                <div class="col-sm-2 pull-right">
                  <%= f.text_field :debt , {class:"form-control", value:0}%>
                </div>

                <%= f.label :due_date,  'تاريخ الاستحقاق', {class:"col-sm-2 control-label pull-right"}%>
                <div class="col-sm-2 pull-right">
                  <%= f.date_field :due_date , {class:"form-control"}%>
                </div>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-2 pull-right">
                <%= f.submit "إتمام عملية البيع", class:"btn btn-primary btn-label-left"%>
              </div>
              <div class="col-sm-offset-1 col-sm-2 pull-right">
                <button type="cancel" class="btn btn-default btn-label-left">
                <span><i class="fa fa-clock-o txt-danger"></i></span>
                  إلغاء
                </button>
            </div>
          </div>
          </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript">
// Run Select2 plugin on elements
function DemoSelect2(){
  $('#s2_with_tag').select2({placeholder: "Select OS"});
  $('#s2_country').select2();
}
// Run timepicker
function DemoTimePicker(){
  $('#input_time').timepicker({setDate: new Date()});
}
$(document).ready(function() {
  // Create Wysiwig editor for textare
  TinyMCEStart('#wysiwig_simple', null);
  TinyMCEStart('#wysiwig_full', 'extreme');
  // Add slider for change test input length
  FormLayoutExampleInputLength($( ".slider-style" ));
  // Initialize datepicker
  $('#input_date').datepicker({setDate: new Date()});
  // Load Timepicker plugin
  LoadTimePickerScript(DemoTimePicker);
  // Add tooltip to form-controls
  $('.form-control').tooltip();
  LoadSelect2Script(DemoSelect2);
  // Load example of form validation
  LoadBootstrapValidatorScript(DemoFormValidator);
  // Add drag-n-drop feature to boxes
  WinMove();
  set_debt();
});

function validate() {
  var ids = $("select[id^='product_ids'] :selected");
  var hash = {};
  for (var i = 0; i < ids.length; i++) {
    console.log(hash)
    if(hash[ids[i].text] == 1) {
      $(".box-content").prepend("<h3 class='alert alert-danger'>لا يمكن اختيار نفس المنتج أكتر من مرة!</h3>")
      return false;
    }
    hash[ids[i].text] = 1;
  }
  return true;
}
function set_debt() {
  $('#purchase_debt').val(0)
  if ($('#purchase_payment_state').val() == "آجل") {
    $('#debt-div').show();
  }
  else {
   $('#debt-div').hide();
  }
}
var i = 1
$("#add-product").click(function(e) {
  var div = document.getElementById('product'),
      clone = div.cloneNode(true); // true means clone all childNodes and all event handlers
  clone.id = "add-product" + i++;
  document.getElementById('products').appendChild(clone);
  $("#"+clone.id+" span").attr('id', "delete-product"+i)
  $("#"+clone.id+" select").val(1);
  $("#"+clone.id+" input").val('');
});

function f() {
  if (event.target.id != 'delete-product') {
    document.getElementById('products').removeChild(event.target.parentNode);
  }
}

</script>